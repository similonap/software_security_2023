<% if (locals.error) { %>
    <b style="color: white; background-color: red;"><%- error %></b>
<% } %>

<% if (locals.success) { %>
    <b style="color: white; background-color: green;"><%- success %></b>
<% } %>

<form name="ticket" method="POST" action="/buy-ticket">
    <label for="name">Naam: *</label>
    <input type="text" value="<%= locals.user.fullname %>" id="name" name="name" required pattern="^[A-Za-z ]+$" readonly>
    <br>
    <label for="name">Aantal tickets: *</label>
    <input type="number" id="tickets" name="tickets" min="1" max="3" required>
    <br>
    <label for="name">Land: *</label>
    <input type="text" id="country" name="country" placeholder="BE" pattern="^BE|NL$" required>

    <br/>

    <input type="submit" value="Koop Ticket">
</form>

<a href="/logout">Logout</a> 
<% if (locals.user.admin) { %>
    <a href="/show-tickets">Show ticket sales</a> 
<% } %>